generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model Pokemon {
  id        Int      @id @default(autoincrement())
  name      String
  number    Int
  image     String
  type      String
  weight    String
  height    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model PokemonUser {
  id        Int      @id @default(autoincrement())
  userId    Int
  pokemonId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([pokemonId])
}
